<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>



<HBox alignment="CENTER" prefHeight="600.0" prefWidth="1000.0" spacing="32.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wakeb.yusradmin.controllers.LoginController">


   <children>
      <AnchorPane prefHeight="600.0" prefWidth="500.0">
         <children>
            <StackPane fx:id="heroCard" prefHeight="520.0" prefWidth="379.0" styleClass="hero-card" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="81.0" AnchorPane.topAnchor="40.0" />
         </children>
      </AnchorPane>


      <VBox fx:id="formWrapper" alignment="CENTER" fillWidth="true" nodeOrientation="RIGHT_TO_LEFT" prefHeight="600.0" prefWidth="368.0" spacing="18.0" style="-fx-spacing: 40;" styleClass="auth-form">


         <children>
            <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="6.0">
               <children>
                  <Label styleClass="title" text="تسجيل الدخول" />
                  <Label styleClass="muted" text="ادخل بيانات الدخول الخاصة بك" />
               </children>
            </VBox>


            <VBox alignment="TOP_RIGHT" fillWidth="true" nodeOrientation="RIGHT_TO_LEFT" spacing="14.0">
               <children>


                  <VBox alignment="TOP_RIGHT" fillWidth="true" spacing="6.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="517.0" styleClass="field-label" text="البريد الإلكتروني" />
                        <TextField fx:id="usernameField" maxWidth="Infinity" prefHeight="40.0" promptText="أدخل بريدك الإلكتروني" styleClass="text-field" />
                     </children>
                  </VBox>


                  <VBox alignment="TOP_RIGHT" fillWidth="true" spacing="6.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="418.0" styleClass="field-label" text="كلمة المرور" />
                        <PasswordField fx:id="passwordField" maxWidth="Infinity" prefHeight="40.0" promptText="أدخل كلمة المرور" styleClass="password-field" />
                     </children>
                  </VBox>
               </children>
            </VBox>

            <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin" prefHeight="44.0" styleClass="button" text="تسجيل الدخول" />

         </children>
      </VBox>
   </children>
</HBox>
