<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../../../css/places.css"
            fx:controller="com.wakeb.yusradmin.controllers.PlacesController"
            nodeOrientation="RIGHT_TO_LEFT">

    <center>
        <VBox spacing="14" style="-fx-padding:18;">
            <Label text="إدارة الأماكن" styleClass="meta-label"/>

            <HBox styleClass="toolbar" spacing="8">
                <children>
                    <TextField fx:id="searchField" promptText="بحث عن مكان..." styleClass="input-field" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="searchButton" text="بحث" styleClass="card-button"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="filterComboBox" promptText="اختر فلتر..." prefWidth="160" styleClass="combo-box-field"/>
                </children>
            </HBox>

            <ScrollPane fx:id="cardsScroll" fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <FlowPane fx:id="cardsPane" hgap="16" vgap="16" prefWrapLength="0" alignment="TOP_CENTER">
                        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                    </FlowPane>
                </content>
            </ScrollPane>

            <HBox spacing="10" style="-fx-padding: 10;">
                <children>
                    <Button fx:id="prevBtn" text="السابق" onAction="#prevPage" styleClass="card-button"/>
                    <Label fx:id="pageInfo" text="صفحة 1/1"/>
                    <Button fx:id="nextBtn" text="التالي" onAction="#nextPage" styleClass="card-button"/>
                </children>
            </HBox>
        </VBox>
    </center>
</BorderPane>