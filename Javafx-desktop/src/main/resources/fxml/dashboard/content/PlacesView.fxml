<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane stylesheets="@../../../css/places.css" nodeOrientation="RIGHT_TO_LEFT"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.wakeb.yusradmin.controllers.PlacesController">

    <center>
        <VBox styleClass="container" BorderPane.alignment="CENTER" spacing="10">
            <Label styleClass="heading-1" text="إدارة الأماكن" />

            <HBox styleClass="toolbar" spacing="8">
                <children>
                    <TextField fx:id="searchField" promptText="بحث عن مكان..."
                               styleClass="input-field" HBox.hgrow="ALWAYS" />
                    <Button fx:id="searchButton" styleClass="search-button" text="بحث" />
                    <Region HBox.hgrow="ALWAYS" />
                    <ComboBox fx:id="filterComboBox" prefWidth="150.0"
                              promptText="اختر فلتر..." styleClass="combo-box-field" />
                </children>
            </HBox>

            <!-- ScrollPane يلف الـ FlowPane -->
            <ScrollPane fx:id="cardsScroll" fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <FlowPane fx:id="cardsPane"
                              hgap="16" vgap="16"
                              prefWrapLength="0"
                              alignment="TOP_CENTER">
                        <padding>
                            <Insets top="16" right="16" bottom="16" left="16"/>
                        </padding>
                    </FlowPane>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>