<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../../css/places.css" nodeOrientation="RIGHT_TO_LEFT" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wakeb.yusradmin.controllers.PlacesController">
    <center>
        <VBox styleClass="container" BorderPane.alignment="CENTER">
            <Label styleClass="heading-1" text="إدارة الأماكن" />
            <HBox styleClass="toolbar">
                <children>
                    <TextField fx:id="searchField" promptText="بحث عن مكان..." styleClass="input-field" HBox.hgrow="ALWAYS" />
                    <Button fx:id="searchButton" styleClass="button-primary" text="بحث" />
                    <Region HBox.hgrow="ALWAYS" />
                    <ComboBox fx:id="filterComboBox" prefWidth="150.0" promptText="اختر فلتر..." styleClass="combo-box-field" />
                </children>
            </HBox>
            <TableView fx:id="placesTable" styleClass="data-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="photoColumn" prefWidth="120" styleClass="table-column-header" text="صورة المكان" />
                    <TableColumn fx:id="nameColumn" prefWidth="120" styleClass="table-column-header" text="اسم المكان" />
                    <TableColumn fx:id="typeColumn" prefWidth="115" styleClass="table-column-header" text="نوع المكان" />
                    <TableColumn fx:id="servicesColumn" prefWidth="215" styleClass="table-column-header" text="الخدمات المقدمة" />
                    <TableColumn fx:id="locationColumn" prefWidth="90" styleClass="table-column-header" text="الموقع" />
                    <TableColumn fx:id="actionsColumn" prefWidth="200" styleClass="table-column-header" text="إجراءات" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
