<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../../../css/places.css"
            fx:controller="com.wakeb.yusradmin.controllers.ReviewsController"
            nodeOrientation="RIGHT_TO_LEFT">

    <center>
        <VBox spacing="14" style="-fx-padding:18;">
            <Label text="إدارة التقييمات" styleClass="meta-label"/>

            <HBox styleClass="toolbar">
                <children>
                    <TextField fx:id="searchField" promptText="ابحث باسم المكان" styleClass="input-field" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="searchButton" text="بحث" styleClass="card-button"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </children>
            </HBox>

            <TableView fx:id="table" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="colId"          text="ID"        prefWidth="70"  styleClass="table-column-header"/>
                    <TableColumn fx:id="colUsername"    text="المستخدم"  prefWidth="190" styleClass="table-column-header"/>
                    <TableColumn fx:id="colPlace"       text="المكان"     prefWidth="260" styleClass="table-column-header"/>
                    <TableColumn fx:id="colReview"      text="التقييم"    prefWidth="110" styleClass="table-column-header"/>
                    <TableColumn fx:id="colDescription" text="الوصف"      prefWidth="300" styleClass="table-column-header"/>
                    <TableColumn fx:id="colDate"        text="التاريخ"    prefWidth="140" styleClass="table-column-header"/>
                    <TableColumn fx:id="colStatus"      text="الحالة"     prefWidth="120" styleClass="table-column-header"/>
                    <TableColumn fx:id="colActions"     text="الإجراءات"  prefWidth="220" styleClass="table-column-header"/>
                </columns>
                <placeholder><Label text="جاري التحميل..."/></placeholder>
            </TableView>

            <HBox spacing="10" style="-fx-padding: 10;">
                <children>
                    <Button fx:id="prevBtn" text="السابق" onAction="#prevPage" styleClass="card-button"/>
                    <Label fx:id="pageInfo" text="صفحة 1/1"/>
                    <Button fx:id="nextBtn" text="التالي" onAction="#nextPage" styleClass="card-button"/>
                </children>
            </HBox>
        </VBox>
    </center>
</BorderPane>